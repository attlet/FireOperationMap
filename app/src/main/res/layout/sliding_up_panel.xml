<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_weight="0.5"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:id="@+id/view"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border" />

        <TextView
            android:id="@+id/icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:drawableLeft="@drawable/fireplug"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-black"
            android:text="소화전"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/icon_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_text"
            android:drawableLeft="@drawable/fireplug2"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="5dp"
            android:text="지하 소화전"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/icon_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_text2"
            android:drawableLeft="@drawable/blue_square"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="5dp"
            android:text="소화전함"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/icon_text3"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_red_square"
                android:fontFamily="sans-serif-black"
                android:text=" : [협소구간] 중앙10호"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_blue_square"
                android:fontFamily="sans-serif-black"
                android:text=" : 중형펌프 진입 가능"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/long_gray_square"
                android:fontFamily="sans-serif-black"
                android:text=" : 아케이드 설치 구간"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B1BCBE" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />
</LinearLayout>